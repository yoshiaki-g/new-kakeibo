<h2><%= @year %>年 年間収支確認</h2>
<%= link_to '戻る', balance_confirm_path %>

 
<table>
	<thead>
		<tr>
			<th>年月</th>
			<th>収入合計値</th>
			<th>固定費合計値</th>
			<th>変動費合計値</th>
			<th>収支（収入-費用）結果</th>
		</tr>
	</thead>
	<tbody>
	<% month=1 %>
	<% 0.upto(11) do |i| %>
		<% if @income_totals[i].present? %>
			<tr>
			<td><%= @year %>年<%= i+1 %>月</td>
			<td><%= @income_totals[i] %>円</td>
			<td><%= @fixedcost_totals[i] %>円</td>
			<td><%= @variablecost_totals[i] %>円</td>
		  <td><%= @balance_differences[i] %>円</td>
			</tr>
		<% end %>
	<% end %>
	</tbody>
</table>


<div>
<%= pie_chart @data,colors: ["#3333cc","#cc3333","#339966"], donut: true , width: "500px" %>
<table border="1" width="500">
  <tr>
    <th>年間収入合計値</th>
    <th>年間固定費合計値</th>
    <th>年間変動費合計値</th>
    <th>年間収支差</th>

  </tr>
    <tr>
    <th><%=@annual_incomes%>円</th>
    <th><%=@annual_fixedcosts%>円</th>
    <th><%=@annual_variablecosts%>円</th>
    <th><%=@annual_balance_differences%>円</th>
  </tr>
</table> 
</div>

<%= link_to 'トップページ戻る', root_path %>