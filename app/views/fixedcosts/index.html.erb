<% @page_title = "固定費一覧" %>
<h2><%= @page_title %></h2>

<%= link_to "固定費の新規登録", new_fixedcost_path %>

<h2>固定費科目 データ一覧 </h2>
<% if @fixedcosts.present? %>
<table>
  <tr>
    <th>登録年月</th>
    <th>名称</th>
    <th>値</th>
    <th>備考</th>
    <th>操作</th>
  </tr>
  <% @fixedcosts.each do |fixedcost| %>
  <tr>
  <td><%= fixedcost.year_month.strftime('%Y年%m月') %></td>
    <td><%= fixedcost.name %></td>
    <td><%= fixedcost.value.to_s(:delimited) %> 円</td>
    <td><%= fixedcost.description %></td>
    <td>
    <%= link_to "編集", [:edit, fixedcost] %> |
    <%= link_to "削除", fixedcost, method: :delete,
      data: { confirm: "本当に削除しますか？"} %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
  <p>登録されているデータがありません。</p>
<% end %>
<%= link_to 'トップページ戻る', root_path %>