<h2>固定費の登録</h2>
<%= form_with model: @fixedcost, local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <%= link_to "固定費一覧に戻る", fixedcosts_path %>
<table>
  <tr>
    <th>登録年月</th>
    <th>名称</th>
    <th>金額</th>
    <th>備考</th>
  </tr>
  <tr>  
    <td>
      <%= f.date_select :year_month,
            start_year: 2010, end_year: Time.current.year,
            use_month_numbers: true, discard_day: true, default: @year_month
            %>
    </td>
    <td><%= f.text_field :name %></td>
    <td><%= f.text_field :value, size: 8 %></td>
    <td><%= f.text_field :description, size: 25 %></td>
 </tr>
</table>
    <div><%= f.submit "保存する" %></div>
  
<% end %>