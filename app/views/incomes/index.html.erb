<% @page_title = "収入一覧" %>
<h2><%= @page_title %></h2>

<%= link_to "収入の新規登録", new_income_path %>

<% if @incomes.present? %>
<div>
  <div>
    <tr>
      <th>品名</th>
      <th>備考</th>
      <th>操作</th>
    </tr>
  </div>
  <div>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.name %></td>
        <td><%= income.description %></td>
        <td>
          <%= link_to "編集", [:edit, income] %>
          <%= link_to "削除", income, method: :delete,
          data: { confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    <% end %>
  </div>
</div>

<% else %>
  <p>登録されている収入がありません</p>
<% end %>