<% @page_title = "収入一覧" %>
<h2><%= @page_title %></h2>

<%= link_to "収入の新規登録", new_income_path %>

<h2>収入科目 データ一覧 </h2>
<% if @incomes.present? %>
<table>
  <tr>
    <th>登録年月</th>
    <th>名称</th>
    <th>値</th>
    <th>備考</th>
    <th>操作</th>
  </tr>
  <% @incomes.each do |income| %>
  <tr>
  <td><%= income.year_month.strftime('%Y年%m月') %></td>
    <td><%= income.name %></td>
    <td><%= income.value.to_s(:delimited) %> 円</td>
    <td><%= income.description %></td>
    <td>
    <%= link_to "編集", [:edit, income] %> |
    <%= link_to "削除", income, method: :delete,data: { confirm: "本当に削除しますか？"} %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
  <p>登録されているデータがありません。</p>
<% end %>
<%= link_to 'トップページ戻る', root_path %>