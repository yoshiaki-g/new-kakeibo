<h2>変動費の登録</h2>
<%= form_with model: @variablecost, local: true do |f| %>
  <%= link_to "変動費一覧に戻る", variablecosts_path %>
  <div>
    <tr>
	    <th><%= f.label :name, "名称" %></th>
	    <td><%= f.text_field :name %></td>
    </tr>
    <tr>
	    <th><%= f.label :description, "備考" %></th>
	    <td><%= f.text_field :description %></td>
    </tr>
    <div>
    <tr>
      <td><%= f.date_select :year_month,
        start_year: 2010, end_year: Time.current.year,
        use_month_numbers: true, discard_day: true %>
      </td>
      <th><%= f.label :value, "金額" %></th>
      <td><%= f.text_field :value %></td>
    </tr>
    </div>
    <div><%= f.submit "保存する" %></div>
  </div>
<% end %>